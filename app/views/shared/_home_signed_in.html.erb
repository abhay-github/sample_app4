<%= javascript_include_tag("microposts.js") %>
<div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">

      <div class="btn-group" data-toggle="buttons-radio">
        <button id="showMcrpst" type="button" class="btn btn-large <%= @viewMsgs ? '' : 'active' %>">Microposts</button>
        <button id="showMsg" type="button" class="btn btn-large  <%= @viewMsgs ? 'active' : '' %>">Messages</button>
      </div>

      <div class="home_content">
        <% if @viewMsgs %>
          <%= render 'messages/index' %>
        <% else %>
          <%= render 'shared/feed' %>
        <% end %>
      </div>
      
    </div>
</div>