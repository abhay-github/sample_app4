<li>
	<%= link_to gravatar_for(message.receiver), message.receiver %>
	<span class="user">
		<%= link_to message.receiver.name, message.receiver %>
	</span>
	<span class="content"><%= wrap(message.content) %></span>
	<span class="timestamp">
		Posted on <%= message.created_at.to_time.strftime('%b %e \'%y at %l:%M %p') %>.
	</span>
</li>